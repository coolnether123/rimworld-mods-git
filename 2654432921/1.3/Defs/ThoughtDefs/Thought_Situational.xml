<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThoughtDef>
		<defName>RomanceOnTheRim_MissingLover</defName>
		<workerClass>RomanceOnTheRim.ThoughtWorker_MissingLover</workerClass>
		<stages>
		  <li>
			<label>minor miss</label>
			<description>It's been a while.</description>
			<baseMoodEffect>-2</baseMoodEffect>
		  </li>
		  <li>
			<label>serious miss</label>
			<description>I miss you so badly.</description>
			<baseMoodEffect>-4</baseMoodEffect>
		  </li>
		  <li>
			<label>intense miss</label>
			<description>I will wait for you to come home.</description>
			<baseMoodEffect>-6</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>RomanceOnTheRim_WorryAboutLoversHealth</defName>
		<workerClass>RomanceOnTheRim.ThoughtWorker_WorryAboutLoversHealth</workerClass>
		<stages>
		  <li>
			<label>minor concern about my lover</label>
			<description>My lover is sick.</description>
			<baseMoodEffect>-2</baseMoodEffect>
		  </li>
		  <li>
			<label>serious concern about my lover</label>
			<description>My lover is sick. I hope {PAWN_gender ? he : she} can recover soon.</description>
			<baseMoodEffect>-3</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>RomanceOnTheRim_Thought_RomanceNeedLevel</defName>
		<workerClass>RomanceOnTheRim.ThoughtWorker_RomanceNeedLevel</workerClass>
		<stages>
		  <li>
			<label>romance need dissatisfied</label>
			<description>I'm yearning for some interactions with my lover.</description>
			<baseMoodEffect>-8</baseMoodEffect>
		  </li>
		  <li>
			<label>romance need satisfied</label>
			<description>Love is my fortune.</description>
			<baseMoodEffect>5</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>
</Defs>
  