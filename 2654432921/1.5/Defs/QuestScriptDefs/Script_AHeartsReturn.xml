<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<QuestScriptDef>
		<defName>RotR_Quest_AHeartsReturn</defName>
		<autoAccept>true</autoAccept>
		<defaultHidden>true</defaultHidden>
		<rootSelectionWeight>0.15</rootSelectionWeight>
		<minRefireDays>60</minRefireDays>
		<sendAvailableLetter>false</sendAvailableLetter>
		<questNameRules>
			<rulesStrings>
				<li>questName->A Heart's Return</li>
			</rulesStrings>
		</questNameRules>
		<questDescriptionRules>
			<rulesStrings>
				<li>questDescription->Placeholder.</li>
			</rulesStrings>
		</questDescriptionRules>
		<root Class="RomanceOnTheRim.QuestNode_Root_AHeartsReturn" />
	</QuestScriptDef>
	
	<ThoughtDef>
		<defName>RotR_AHRAcceptedMood_Partner</defName>
		<durationDays>3</durationDays>
		<stackLimit>1</stackLimit>
		<stackedEffectMultiplier>1</stackedEffectMultiplier>
		<stages>
			<li>
				<label>accepted</label>
				<description>Finally here after such a long trek. I hope there is a chance for us after all.</description>
				<baseMoodEffect>8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>RotR_AHRRejectedMood_Colonist</defName>
		<durationDays>3</durationDays>
		<stackLimit>1</stackLimit>
		<stackedEffectMultiplier>1</stackedEffectMultiplier>
		<stages>
			<li>
				<label>my lover turned away</label>
				<description>Just wasn't the right time or place for a reunion.</description>
				<baseMoodEffect>0</baseMoodEffect>
			</li>
			<li>
				<label>my lover turned away</label>
				<description>It stings to see my lover forced to leave.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>RotR_AHRRejectedMood_Partner</defName>
		<durationDays>3</durationDays>
		<stackLimit>1</stackLimit>
		<stackedEffectMultiplier>1</stackedEffectMultiplier>
		<stages>
			<li>
				<label>turned away</label>
				<description>This is life. Your commitment won't always pay off.</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>RotR_AHRLeavedMood_Colonist</defName>
		<durationDays>3</durationDays>
		<stackLimit>1</stackLimit>
		<stackedEffectMultiplier>1</stackedEffectMultiplier>
		<stages>
			<li>
				<label>sad farewell</label>
				<description>My lover chose to leave after the stay. I wish things were different.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>RotR_AHRLeavedMood_Partner</defName>
		<durationDays>3</durationDays>
		<stackLimit>1</stackLimit>
		<stackedEffectMultiplier>1</stackedEffectMultiplier>
		<stages>
			<li>
				<label>bittersweet departure</label>
				<description>I’m leaving. This place has changed, or maybe I have. It’s sad to go, but it feels right to move on.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>RotR_AHRJoinedMood_Colonist</defName>
		<durationDays>5</durationDays>
		<stackLimit>1</stackLimit>
		<stackedEffectMultiplier>1</stackedEffectMultiplier>
		<stages>
			<li>
				<label>together again</label>
				<description>My lover is staying for good! Feels like a dream come true. Excited to start this new chapter together.</description>
				<baseMoodEffect>8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<ThoughtDef>
		<defName>RotR_AHRJoinedMood_Partner</defName>
		<durationDays>5</durationDays>
		<stackLimit>1</stackLimit>
		<stackedEffectMultiplier>1</stackedEffectMultiplier>
		<stages>
			<li>
				<label>new chapter</label>
				<description>I’ve decided to stay. This is my new home now, and I'm ready to build a life here with a fresh start.</description>
				<baseMoodEffect>8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>