<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThoughtDef>
		<defName>RomanceOnTheRim_MissingLover</defName>
		<workerClass>RomanceOnTheRim.ThoughtWorker_MissingLover</workerClass>
		<stages>
		  <li>
			<label>nostalgia for {LOVER_nameDef}</label>
			<description>It's been a while since I last saw {LOVER_objective}.</description>
			<baseMoodEffect>-2</baseMoodEffect>
		  </li>
		  <li>
			<label>longing for {LOVER_nameDef}</label>
			<description>I miss {LOVER_objective} so badly.</description>
			<baseMoodEffect>-4</baseMoodEffect>
		  </li>
		  <li>
			<label>yearning for {LOVER_nameDef}</label>
			<description>I will wait for {LOVER_objective} to come home.</description>
			<baseMoodEffect>-6</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>RomanceOnTheRim_WorryAboutLoversHealth</defName>
		<workerClass>RomanceOnTheRim.ThoughtWorker_WorryAboutLoversHealth</workerClass>
		<stages>
		  <li>
			<label>minor concern about {LOVER_nameDef}</label>
			<description>{LOVER_nameDef} is sick. I hope {LOVER_pronoun} can recover soon.</description>
			<baseMoodEffect>-2</baseMoodEffect>
		  </li>
		  <li>
			<label>serious concern about {LOVER_nameDef}</label>
			<description>{LOVER_nameDef} is sick. It would be fine, right?</description>
			<baseMoodEffect>-4</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>RomanceOnTheRim_Thought_RomanceNeedLevel</defName>
		<workerClass>RomanceOnTheRim.ThoughtWorker_RomanceNeedLevel</workerClass>
		<stages>
		  <li>
			<label>romance need dissatisfied</label>
			<description>I'm yearning for some interactions with my lover.</description>
			<baseMoodEffect>-5</baseMoodEffect>
		  </li>
		  <li>
			<label>romance need satisfied</label>
			<description>Love is my fortune.</description>
			<baseMoodEffect>5</baseMoodEffect>
		  </li>
		</stages>
	</ThoughtDef>
</Defs>
  