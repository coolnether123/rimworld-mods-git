<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- queries in order -->
	<TD_Find_Lib.ThingQueryCategoryDef>
		<mod>Ludeon.RimWorld.Ideology</mod>
		<defName>Category_IdeoPawn</defName>
		<label>ideoligion</label>
		<insertCategory>Category_PawnProp</insertCategory>
		<subQueries>
			<li>Query_Ideoligion</li>
			<li>Query_Meme</li>
			<li>Query_Precept</li>
			<li>Query_Role</li>
			<li>Query_IdeoXenotype</li>
			<li>Query_WeaponDisposition</li>
		</subQueries>
	</TD_Find_Lib.ThingQueryCategoryDef>
		
	<TD_Find_Lib.ThingQueryDef>
		<defName>Query_Style</defName>
		<label>style</label>
		<queryClass>TDFindLib_Ideology.ThingQueryThingStyle</queryClass>
		<mod>Ludeon.RimWorld.Ideology</mod>
		<insertCategories>
			<li>Category_BuildingInfo</li>
			<li>Category_ItemInfo</li>
		</insertCategories>
	</TD_Find_Lib.ThingQueryDef>
	
	<TD_Find_Lib.ThingQueryDef>
		<defName>Query_Ideoligion</defName>
		<label>ideoligion</label>
		<queryClass>TDFindLib_Ideology.ThingQueryIdeoligion</queryClass>
		<mod>Ludeon.RimWorld.Ideology</mod>
	</TD_Find_Lib.ThingQueryDef>
	
	<TD_Find_Lib.ThingQueryDef>
		<defName>Query_Meme</defName>
		<label>ideoligion has meme</label>
		<queryClass>TDFindLib_Ideology.ThingQueryMeme</queryClass>
		<mod>Ludeon.RimWorld.Ideology</mod>
	</TD_Find_Lib.ThingQueryDef>
	
	<TD_Find_Lib.ThingQueryDef>
		<defName>Query_Precept</defName>
		<label>ideoligion has precept</label>
		<queryClass>TDFindLib_Ideology.ThingQueryPrecept</queryClass>
		<mod>Ludeon.RimWorld.Ideology</mod>
	</TD_Find_Lib.ThingQueryDef>
	
	<TD_Find_Lib.ThingQueryDef>
		<defName>Query_Role</defName>
		<label>ideoligion role</label>
		<queryClass>TDFindLib_Ideology.ThingQueryRole</queryClass>
		<mod>Ludeon.RimWorld.Ideology</mod>
	</TD_Find_Lib.ThingQueryDef>
	
	<TD_Find_Lib.ThingQueryDef>
		<defName>Query_IdeoXenotype</defName>
		<label>preferred xenotype</label>
		<queryClass>TDFindLib_Ideology.ThingQueryIdeoXenotype</queryClass>
		<mod>Ludeon.RimWorld.Ideology</mod>
	</TD_Find_Lib.ThingQueryDef>
	
	<TD_Find_Lib.ThingQueryDef>
		<defName>Query_VeneratedAnimal</defName>
		<label>venerated animal</label>
		<queryClass>TDFindLib_Ideology.ThingQueryVeneratedAnimal</queryClass>
		<mod>Ludeon.RimWorld.Ideology</mod>
		<insertCategory>Category_AnimalProp</insertCategory>
	</TD_Find_Lib.ThingQueryDef>
	
	<TD_Find_Lib.ThingQueryDef>
		<defName>Query_WeaponClass</defName>
		<label>weapon class</label>
		<queryClass>TDFindLib_Ideology.ThingQueryWeaponClass</queryClass>
		<mod>Ludeon.RimWorld.Ideology</mod>
		<insertCategory>Category_ItemInfo</insertCategory>
		<tooltip>The weapon class for an ideoligion's preferred weapons</tooltip>
	</TD_Find_Lib.ThingQueryDef>
	
	<TD_Find_Lib.ThingQueryDef>
		<defName>Query_WeaponDisposition</defName>
		<label>weapon preference</label>
		<queryClass>TDFindLib_Ideology.ThingQueryWeaponDisposition</queryClass>
		<mod>Ludeon.RimWorld.Ideology</mod>
		<insertCategory>Category_ItemInfo</insertCategory>
		<tooltip>If a weapon is preferred by your ideoligion; or the ideoligion of its wielder; or if a person is wielding a preferred weapon according to their ideoligion</tooltip>
	</TD_Find_Lib.ThingQueryDef>
	
	<TD_Find_Lib.ThingQueryDef>
		<defName>Query_Gauranlen</defName>
		<label>gauranlen tree</label>
		<queryClass>TDFindLib_Ideology.ThingQueryGauranlen</queryClass>
		<mod>Ludeon.RimWorld.Ideology</mod>
		<insertCategory>Category_Plants</insertCategory>
	</TD_Find_Lib.ThingQueryDef>

</Defs>