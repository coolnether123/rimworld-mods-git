<?xml version="1.0" encoding="utf-8"?>

<Patch>
	
	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/HediffDef[@Name="AddedBionicBodyPartAnimalBase"]</xpath>
		<value>
			<defaultLabelColor>(0.5, 0.5, 0.9)</defaultLabelColor>
		</value>
	</Operation>
	
	
		
	<!--             Synthetics             -->

	<!-- Synthetic heart -->

	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/HediffDef[defName="BionicHeartAnimal"]</xpath>
		<attribute>ParentName</attribute>
		<value>AddedSyntheticBodyPartAnimalBase</value>
	</Operation>	
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/HediffDef[defName="BionicHeartAnimal"]/label</xpath>
		<value>
			<label>synthetic animal heart</label>
		</value>
	</Operation>	
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/HediffDef[defName="BionicHeartAnimal"]/labelNoun</xpath>
		<value>
			<labelNoun>a synthetic animal heart</labelNoun>
		</value>
	</Operation>	
	<Operation Class="PatchOperationReplace">
		<xpath>/Defs/HediffDef[defName="BionicHeartAnimal"]/description</xpath>
		<value>
			<description>An installed synthetic animal heart.</description>
		</value>
	</Operation>	
	
	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[defName="BionicHeartAnimal"]</xpath>
