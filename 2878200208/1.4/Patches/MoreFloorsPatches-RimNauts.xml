    <mods>
      <li>RimNauts</li>
    </mods>

    <match Class="PatchOperationAttributeRemove">
      <xpath>/Defs/TerrainDef[defName="FloorStoneArabesqueRNHighland" or
        defName="FloorStoneArabesqueRNMaria"]</xpath>
      <attribute>Abstract</attribute>
    </match>
  </Operation>

</Patch>
