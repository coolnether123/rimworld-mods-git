    <match Class="PatchOperationAttributeRemove">
      <xpath>/Defs/TerrainDef[defName="FloorStoneHexRNHighland" or
        defName="FloorStoneHexRNMaria"]</xpath>
      <attribute>Abstract</attribute>
    </match>
  </Operation>
  
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>RimNauts</li>
    </mods>

    <match Class="PatchOperationAttributeRemove">
      <xpath>/Defs/TerrainDef[defName="FloorStoneDigitalRNHighland" or
        defName="FloorStoneDigitalRNMaria"]</xpath>
      <attribute>Abstract</attribute>
    </match>
  </Operation>
  
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>RimNauts</li>
    </mods>

    <match Class="PatchOperationAttributeRemove">
      <xpath>/Defs/TerrainDef[defName="FloorStoneMosaicRNHighland" or
        defName="FloorStoneMosaicRNMaria"]</xpath>
      <attribute>Abstract</attribute>
    </match>
  </Operation>
  
  <Operation Class="PatchOperationFindMod">
