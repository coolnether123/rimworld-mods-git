	<ThingDef Abstract="True" ParentName="BuildingBase" Name="LT_MatBase">
		<thingClass>LT.Building_DoorMat</thingClass>
		<description>A doormat to clean your feet.</description>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
			<isEdifice>false</isEdifice>
		</building>
		<comps>
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
		<graphicData>
			<texPath>Things/Building/DoorMat</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<Beauty>1</Beauty>
			<Flammability>1.0</Flammability>
			<MarketValue>5</MarketValue>
			<MaxHitPoints>50</MaxHitPoints>
			<WorkToBuild>120</WorkToBuild>
			<Mass>1.5</Mass>
			<Comfort>0.2</Comfort>
		</statBases>
		<altitudeLayer>FloorCoverings</altitudeLayer>
		<clearBuildingArea>false</clearBuildingArea>
		<designationCategory>Misc</designationCategory>
		<drawGUIOverlay>True</drawGUIOverlay>
		<filthLeaving>Filth_RubbleBuilding</filthLeaving>
		<minifiedDef>MinifiedThing</minifiedDef>
		<passability>Standable</passability>
		<pathCost>0</pathCost>
		<repairEffect>Repair</repairEffect>
		<rotatable>true</rotatable>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<tickerType>Normal</tickerType>
		<tradeTags>
			<li>Furniture</li>
		</tradeTags>
	</ThingDef>

